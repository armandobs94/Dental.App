<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBD6D6"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/edit_contra"
        android:contentDescription="@string/app_name"
        android:src="@drawable/diente" />

    <EditText
        android:id="@+id/edit_usuario"
        android:layout_width="600dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginRight="128dp"
        android:ems="10"
        android:hint="@string/Usuario"
        android:textColorHint="#F000"
        android:textSize="45sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edit_contra"
        android:layout_width="600dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/edit_usuario"
        android:layout_marginBottom="80dp"
        android:ems="10"
        android:hint="@string/Contra"
        android:inputType="textPassword"
        android:textColorHint="#F000"
        android:textSize="45sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_alignRight="@+id/edit_contra"
        android:layout_below="@+id/edit_contra"
        android:height="30dp"
        android:text="@string/Entrar"
        android:textSize="45sp"
        android:width="150dp" />

</RelativeLayout>
